{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C Build",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g", // 디버깅 정보 추가
                "${file}", // 현재 열려 있는 파일을 컴파일
                "-o", // 출력 파일 경로 설정
                "${fileDirname}/${fileBasenameNoExtension}.exe", // 실행 파일로 컴파일
                "-lws2_32" // Winsock2 라이브러리 링크
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Generated task for building C file using GCC"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe build active file",
            "command": "\"D:/Program Files/mingw64/bin/gcc.exe\"",
            "args": [
                "-fdiagnostics-color=always", // 색상을 통한 에러 메시지 표시
                "-g", // 디버깅 정보 추가
                "${file}", // 현재 파일 컴파일
                "-o", // 출력 파일 지정
                "${fileDirname}/${fileBasenameNoExtension}.exe",
                "-lws2_32" // Winsock2 라이브러리 링크
            ],
            "options": {
                "cwd": "D:/Program Files/mingw64/bin" // 컴파일러 경로
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}